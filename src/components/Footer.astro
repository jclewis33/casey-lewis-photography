---
import Image from "astro/components/Image.astro";
import footerLogo from "../assets/Casey-Lewis-Photography-Logo-p-500.png";
---

<footer class="footer padding-vertical-sitewide">
  <div class="container">
    <div class="footer-grid grid-3">
      <div class="footer-logo-wrapper">
        <a href="/" aria-current="page" class="logo-link">
          <Image
            src={footerLogo}
            loading="lazy"
            sizes="(max-width: 600px) 100vw, 600px"
            alt="Casey Lewis Photography logo"
            class="logo-image"
          />
        </a>
      </div>

      <nav class="footer-nav">
        <a href="/" aria-current="page" class="footer-nav-item">Home</a>
        <a href="/about" class="footer-nav-item">About</a>
        <a href="/contact" class="footer-nav-item">Contact</a>
      </nav>
      <div class="footer-contact">
        <div class="contact-email">
          <img
            src="../assets/Email-Icon.svg"
            loading="lazy"
            alt="Email Icon"
            class="contact-icon"
          />
          <a
            href="mailto:casey@caseylewisphotography.com?subject=Photography%20Services"
            class="contact-link"
          >
          </a>
        </div>
        <div class="contact-phone">
          <img
            src="../assets/Phone-Icon.svg"
            loading="lazy"
            alt="Phone Icon"
            class="contact-icon"
          />
          <a href="tel:7063386155" class="contact-link"> </a>
        </div>
        <a
          href="https://www.facebook.com/caseylewisphotography"
          target="_blank"
          class="social-media-link"
        >
          <img
            src="../assets/Facebook.svg"
            loading="lazy"
            alt="Facebook"
            class="social-media-icon"
          />
        </a>
        <a
          href="https://www.instagram.com/caseylewisphotography/"
          target="_blank"
          class="social-media-link"
        >
          <img
            src="../assets/Instagram.svg"
            loading="lazy"
            alt="Instagram"
            class="social-media-icon"
          />
        </a>
      </div>
    </div>
  </div>
</footer>
