      </div>

      <!-- Footer Nav Links -->
      <nav class="footer__nav">
        <a href="/" class="footer__nav-item">Home</a>
        <a href="/about" class="footer__nav-item">About</a>
        <a href="/contact" class="footer__nav-item">Contact</a>
